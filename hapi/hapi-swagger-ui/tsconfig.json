{
  "compilerOptions": {
    "module": "commonjs",
		"target": "es6",
		"allowJs": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
		"sourceMap": true,
		"outDir": "build"
	},
	"include": [
		"**/*.js",
		"**/*.ts"
  ],
  "exclude": [
		"node_modules",
		"**/*.spec.ts",
		"build"
	]
}