{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "module": "ESNext",
    "esModuleInterop": true,
    "lib": [
      "DOM", "DOM.Iterable", "ESNext"
    ],
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "$src/*": [ "src/*" ],
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "build",
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
  ]
}
